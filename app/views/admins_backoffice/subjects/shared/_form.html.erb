<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>

<div class="row">  
  <% if @subject.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <% @subject.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
    </div>
  <% end %>
  
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          <%= "#{action_message}" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
              
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_field :description, class:"form-control", placeholder:t('placeholders.subject.description', model: @subject.model_name.human) %>
              </div>

              <button type="submit", class="btn btn-success" ><%= t('buttons.save') %></button>
              <%= link_to t('buttons.cancel'), admins_backoffice_subjects_path, class:"btn btn-danger" %>
            <% end %>
          </div>
            <!-- /.col-lg-6 (nested) -->
        </div>
          <!-- /.row (nested) -->
      </div>
        <!-- /.panel-body -->
    </div>
      <!-- /.panel -->
  </div>
    <!-- /.col-lg-12 -->
</div>